<!--部分テンプレート-->
<div class="col-md-3">
<h2>User info</h2>

<h3><%= image_tag user.get_profile_image %></h3>

<table class="table">
<tr>
  <th>name</th>
  <th><%= user.name %></th>
</tr>
<tr>
  <th>introduction</th>
  <th><%= user.introduction %><th>
</tr>
</table>

<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
<div class="sample"><i class="fas fa-user-cog"></i></div>
<% end %>

<h2 class="mt-3">New Book</h2>
　　<%= form_with model: book do |f| %>
    Title<br>
      <%= f.text_field :title %><br>
    Opinion<br>
      <%= f.text_area :body %><br/>
      <input type="submit" value="Create Book" class="btn btn-success">
 <% end %>
</div>