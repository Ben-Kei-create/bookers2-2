<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
<div class="row">

<%= render 'user', book: @book, user: @user %>

<div class="col-md-8 offset-md-1 mt-3">
<h2>Books</h2>
<table class="table">
<thead>
<tr>
     <td colspan="1"></td>
     <td>Title</td>
     <td>Opinion</td>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
      <td>
      <%= link_to user_path(book.user.id) do %>
      <%= image_tag book.user.get_profile_image(100, 100) %>
      <% end %>
      </td>

      <td>
      <%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
      </td>

      <td>
      <%= book.body %>
      </td>
</tr>
<% end %>

</tbody>
</table>
</div>
</div>
</div>