<div class="container">
<div class="row">

<%= render 'user', book: @book, user: current_user %>

<div class="col-md-8 offset-md-1 mt-4">

<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">image</th>
      <th scope="col">name</th>
      <th scope="col" colspan="1"></th>
    </tr>
  </thead>
  <tbody>
<% @users.each do |us| %>
    <tr>
    <td><%= image_tag us.get_profile_image(100,100) %></td>
    <td><%= us.name %></td>
    <td><%= link_to "Show", user_path(us.id) %></td>
    <% end %>
</tbody>
</table>
</div>
</div>
</div>