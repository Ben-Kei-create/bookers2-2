<h1>Books</h1>
<table>
<thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
</thead>

<% @books.each do |book| %>
<tr>
  <td><%= image_tag book.get_image %></td>
      <td><%= link_to book.title, "/top" %></td>
      <td><%= book.body %></td>
    </tr>
<% end %>
</table>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br />

    <%= f.submit 'Create Book' %>
  <% end %>

