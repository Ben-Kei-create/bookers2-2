<%= flash[:notice] %>

<div class="container">
<div class="row">

<%= render 'book', book: @book, user: @books.user %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
<tbody>
<tr>
      <td>
      <%= link_to user_path(@books.user.id) do %>
      <%= image_tag @books.user.get_profile_image %><br>
      <%= @books.user.name %>
      <% end %>
      </td>

      <td>
      <%= link_to book_path(@books.id) do %>
      <%= @books.title %>
      <% end %>
      </td>

      <td>
      <%= @books.body %>
      </td>

<!--ログイン時のみ表示させたい-->
      <td>
      <%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success" %>
      </td>

      <td>
      <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger text-white" %>
      </td>
</tr>
</tbody>
</table>
</div>
</div>
</div>