<div class="container">
<div class="row">


<%= render 'book', book: @book, user: @books.user %>

<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table">
<tbody>
<tr>
      <th>
      <%= link_to user_path(@books.user.id) do %>
      <%= image_tag @books.user.get_profile_image %><br>
      <%= @books.user.name %>
      <% end %>
      </th>

      <th>
      <%= link_to book_path(@books.id) do %>
      <%= @books.title %>
      <% end %>
      </th>

      <th>
      <%= @books.body %>
      </th>

<!--ログイン時のみ表示させたい-->
      <th>
      <%=link_to "Edit", edit_book_path(@books.id), class: "btn btn-success" %>
      </th>

      <th>
      <%=link_to(book_path) do %>
      <a data-confirm="本当に消しますか？" class="btn btn-danger text-white" data-method="delete">Destroy</a>
      <%end%>
      </th>

</tr>
</tbody>
</table>
</div>
</div>
